@model List<FoodListsModel>

@{
    ViewData["Title"] = "FoodLists Page";
}

<h2>Food Lists</h2>

<div class="row">
    <div class="col-md-12">
        <a asp-action="CreateFoodLists" asp-controller="FoodList" class="btn btn-success">Create FoodList</a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <td>FoodListID</td>
                    <td>UserID</td>
                    <td>FoodList Title</td>
                    <td>FoodList Description</td>
                    <td>FoodList Created At</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>    
                @foreach( var item in Model){
                    <tr>
                        <td>@item.FoodListID</td>
                        <td>@item.UserID</td>
                        <td>@item.FoodListTitle</td>
                        <td>@item.FoodListDescription</td>
                        <td>@item.FoodListCreatedAt</td>
                        <td>
                            <a asp-action="ViewFoodList" asp-route-id="FoodListID" class="btn btn-primary">View</a>
                            <a asp-action="EditFoodList" asp-route-id="FoodListID" class="btn btn-warning">Edit</a>
                            <a asp-action="DeleteFoodList" asp-route-id="FoodListID" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this?')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="foodlist-container">
        
    </div>
</div>