@model FoodListsModel

<form asp-action="CreateFoodLists" asp-controller="FoodList" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>FoodList Title</label>
                <input asp-for="FoodListTitle" type="text" class="form-control" required>
            </div>

            <div class="form-group">
                <label>FoodList Description</label>
                <input asp-for="FoodListDescription" type="text" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="foodListImage">FoodList Image</label>
                <input type="file" id="foodListImage" name="foodListImage" class="form-control">
            </div>

            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary" style="margin-right: 1rem;">Create FoodList</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </center>
            </div>
        </div>
    </div>
</form>