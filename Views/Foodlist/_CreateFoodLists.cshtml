@model FoodListsModel

<form asp-action="CreateFoodLists" asp-controller="FoodList" method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label asp-for="UserID" class="control-label"></label>
                <select asp-for="UserID" asp-items="ViewBag.Users" class="form-control" required></select>
            </div>

            <div class="form-group">
                <label>FoodList Title</label>
                <input asp-for="FoodListTitle" type="text" class="form-control" required>
            </div>

            <div class="form-group">
                <label>FoodList Description</label>
                <input asp-for="FoodListDescription" type="text" class="form-control" required>
            </div>

            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Create FoodList</button>
                    <a asp-action="FoodLists" asp-controller="FoodLists" class="btn btn-secondary">Cancel</a>
                </center>
            </div>

        </div>
    </div>
</form>