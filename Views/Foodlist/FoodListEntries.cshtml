@model EffectiveWebProg.ViewModels.FoodListViewModel

@{
    ViewData["Title"] = "FoodList Entries Page";
}

<h2>FoodList Entries</h2>

<div class="row">
    <div class="col-md-12">
        <a asp-action="CreateEntries" asp-controller="FoodList" class="btn btn-success">Create Entries</a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <td>FoodListID</td>
                    <td>RestaurantID</td>
    using EffectiveWebProg.ViewModels;
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>    
                @foreach( var item in Model.FoodListEntries){
                    <tr>
                        <td>@item.FoodListID</td>
                        <td>@item.RestID</td>
                        <td>
                            <a asp-action="DeleteEntries" asp-route-id="FoodListID" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this?')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>