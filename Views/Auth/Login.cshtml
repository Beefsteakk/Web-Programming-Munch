@{
    Layout = null;
}
@model EffectiveWebProg.Models.LoginModel


<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="~/css/login.css" rel="stylesheet" />
    <style>
        .btn-primary:hover {
            background-color: rgb(164, 199, 208) !important;
            color: black; /* Optional: change text color on hover */
        }
    </style>
</head>

<nav style="display: flex; justify-content: space-between; align-items: center; height: 70px; padding: 0rem calc((100vw - 1300px) / 2);">
    <a class="logo" asp-controller="Home" asp-action="Index">Munch</a>
</nav>
<div class="container" style="padding-top: 60px;">
    <div class="row" style="margin-top: 150px;">
        <div class="col-lg-10 col-xl-9 mx-auto">
            <div class="card card-signin flex-row my-5">
                <div class="card-img-left d-none d-md-flex"
                    style="box-sizing: border-box; background: scroll center url('/Images/munch_logo3.png');">
                    <!-- Background image for card set in CSS! -->
                </div>
                <div class="card-body">
                    <h5 class="card-title text-center">Welcome to Munch!</h5>

                    <form class="form-signin" method="post" asp-controller="Auth" asp-action="Login">
                        <div class="form-label-group">
                            <input type="text" asp-for="UserEmail" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
                            <label for="inputEmail">Email</label>
                            <span asp-validation-for="UserEmail" class="text-danger"></span>
                        </div>

                        <div class="form-label-group">
                            <input type="password" asp-for="UserPassword" id="inputPassword" class="form-control" placeholder="Password" required>
                            <label for="inputPassword">Password</label>
                            <span asp-validation-for="UserPassword" class="text-danger"></span>
                        </div>

                        <div class="container" style="display: grid; place-items: center;">
                            <a class="d-block text-center mt-2 small" href="/Auth/ForgotPassword">Forgotten password?</a>
                            <p></p>
                            <button class="btn btn-lg btn-primary btn-block text-uppercase " type="submit" 
                            style="width: 150px; text-align: center; background-color:rgb(27, 26, 26); border:0px;">Sign In</button>
                            <p></p>
                            <p class="mt-2 small" style=>Don't have an account? <a class="text-center mt-2" href="/Auth/Register">Register</a></p>
                        </div>
                        <!-- Updated link -->
                        <hr class="my-4">
                    </form>
                </div>
                <!-- Add this script for browser refresh during development -->
                <script src="/_framework/aspnetcore-browser-refresh.js"></script>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.LoginSuccess != null && ViewBag.LoginSuccess == false)
{
    <div class="container" id="login-failure-message"><p style="text-align:center; color: #ee6c4d">Email does not exist or Password does not match. Please try again.</p></div>
}

<script>
    document.addEventListener("DOMContentLoaded", function() {
        var message = document.getElementById("login-failure-message");
        if (message) {
            setTimeout(function() {
                message.style.display = 'none';
            }, 3000); // Hide after 3 seconds
        }
    });
</script>
