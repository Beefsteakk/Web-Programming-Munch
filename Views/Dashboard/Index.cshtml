@{
    ViewData["Title"] = "Dashboard";
    var restaurantDetails = ViewBag.RestaurantDetails as RestaurantsModel;
    var upcomingReservations = ViewBag.UpcomingReservations as List<ReservationsModel>;
    var totalReservations = ViewBag.TotalReservations;
}

<div class="container-fluid">
    <div class="row no-gutters">
        <aside class="col-auto sidebar">
            <!-- Sidebar content here -->
        </aside>
        <main role="main" class="col main-content">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
                <h1 class="h2">Dashboard</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group mr-2">
                        <button class="btn btn-sm btn-outline-secondary">Share</button>
                        <button class="btn btn-sm btn-outline-secondary">Export</button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Restaurant Ratings</h5>
                            <p class="card-text">@restaurantDetails.RestRatings</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Followers</h5>
                            <p class="card-text">200</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Posts</h5>
                            <p class="card-text">10</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Total Reservations</h5>
                            <p class="card-text">@totalReservations</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-8">
                    <canvas id="visitsChart"></canvas>
                </div>
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-header">
                            <h5 class="card-title">Upcoming Reservations</h5>
                        </div>
                       <div class="card-body">
                            @foreach (var reservation in upcomingReservations)
                            {
                                var statusClass = reservation.ReservationStatus.ToLower();
                                if (string.IsNullOrEmpty(statusClass))
                                {
                                    statusClass = "pending";
                                    reservation.ReservationStatus = "Pending";
                                }
                                
                                <div>
                                    <p>
                                        <strong>@reservation.ReservedName</strong> - @reservation.ReservationTime.ToString(@"hh\:mm") @reservation.NumOfGuests Pax 
                                        <span class="badge status-badge @statusClass" data-reservation-id="@reservation.ReservationID" style="cursor: pointer;">
                                            @reservation.ReservationStatus
                                        </span>
                                    </p>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Activity</h5>
                            <p>Activity details go here...</p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
<div class="modal fade" id="statusModal" tabindex="-1" role="dialog" aria-labelledby="statusModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="statusModalLabel">Update Reservation Status</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="statusForm">
                    <input type="hidden" id="reservationId" name="reservationId" />
                    <div class="form-group">
                        <label for="newStatus">New Status</label>
                        <select class="form-control" id="newStatus" name="newStatus">
                            <option value="Pending">Pending</option>
                            <option value="Confirmed">Confirmed</option>
                            <option value="Cancelled">Cancelled</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script>
        var ctx = document.getElementById('visitsChart').getContext('2d');
        var visitsChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['1', '5', '10', '15', '20', '25', '30'],
                datasets: [{
                    label: 'Total visits',
                    data: [220000000, 240000000, 230000000, 260000000, 270000000, 250000000, 240000000],
                    borderColor: 'rgba(75, 192, 192, 1)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    fill: true
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });

        $(document).ready(function () {
            $('.status-badge').on('click', function () {
                var reservationId = $(this).data('reservation-id');
                var currentStatus = $(this).text().trim();
                $('#reservationId').val(reservationId);
                $('#newStatus').val(currentStatus);
                $('#statusModal').modal('show');
            });

            $('#statusForm').on('submit', function (e) {
                e.preventDefault();

                var formData = $(this).serialize();

                $.post('/Dashboard/UpdateReservationStatus', formData, function (response) {
                    if (response.success) {
                        location.reload(); // Refresh the page to show the updated status
                    } else {
                        alert('Failed to update status');
                    }
                });
            });
        });
    </script>
}
<style>
    .status-badge {
        padding: 0.5em;
        border-radius: 0.25em;
        color: white;
        font-weight: bold;
    }
    .pending {
        background-color: yellow;
        color: black;
    }
    .confirmed {
        background-color: green;
    }
    .cancelled {
        background-color: red;
    }
</style>