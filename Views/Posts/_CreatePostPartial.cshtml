<div>
    <form asp-action="CreatePost" asp-controller="Posts" id="createPostForm" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="post">Post:</label>
            <input type="text" name="postContent" class="form-control" required>

            <label for="location">Location:</label>
            <input id="restaurant-search" name="restaurant-search" type="text" class="form-control"/>
            <input type="hidden" name="taggedRestaurantID" id="itemId" />

            <label for="pictures">Pictures:</label>
            <input type="file" id="picturesInput" name="pictures" accept="image/*" multiple class="form-control">

            <div id="imagePreviewContainer"></div>
        </div>
        <button type="submit" class="btn btn-primary float-end">Create Post</button>
    </form>
</div>
