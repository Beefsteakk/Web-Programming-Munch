@model PostsEntity

@{
    ViewData["Title"] = "Adding New Posts";
}

<form asp-action="CreatePosts" asp-controller="Posts" method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Post Title</label>
                <input asp-for="PostTitle" type="text" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Post Content</label>
                <input asp-for="PostContent" type="text" class="form-control" required>
            </div>

            <div class="card-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>

            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Create Post</button>
                    <a asp-action="Posts" asp-controller="Posts" class="btn btn-secondary">Cancel</a>
                </center>
            </div>
        </div>
    </div>
</form>