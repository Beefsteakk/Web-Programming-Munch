@{
    ViewData["Title"] = "Editing Posts";
}

<form asp-action="EditPosts" asp-controller="Posts" method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Post ID (This input is only here for testing purposes and should be removed in the long run)</label>
                <input name="postID" type="text" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Post Title</label>
                <input name="postTitle" type="text" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Post Content</label>
                <input name="postContent" type="text" class="form-control" required>
            </div>

            <div class="card-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>

            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Edit Post</button>
                    <a asp-action="Posts" asp-controller="Posts" class="btn btn-secondary">Cancel</a>
                </center>
            </div>
        </div>
    </div>
</form>