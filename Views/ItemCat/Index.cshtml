@model List<EffectiveWebProg.Models.ItemCatModel>

@{
    ViewData["Title"] = "Item Category Page";
}

<h2>Categories</h2>

<br>
<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" asp-controller="ItemCat" class="btn btn-success">Create New Category</a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>Category ID</th>
                    <th>Category Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CatID</td>
                        <td>@item.CatName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
